{
  "name": "firebase-blog",
  "version": "1.0.0",
  "description": "My groovy Nuxt.js project",
  "author": "Tosuke",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "npm-run-all build:client -p 'build:copy:**'",
    "build:client": "nuxt build",
    "build:copy:asset": "cpx '.nuxt/dist/client/**/*' dist/_nuxt",
    "build:copy:static": "cpx 'static/**/*' dist",
    "build:copy:functions-nuxt": "cpx '.nuxt/**/*' functions/.nuxt",
    "build:copy:functions-config": "cpx nuxt.config.js functions",
    "start": "nuxt start",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "fmt": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "nuxt": "^2.1.0"
  },
  "devDependencies": {
    "@tosuke/prettier-config": "^1.0.1",
    "babel-eslint": "^8.2.1",
    "cpx": "^1.5.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.14.3"
  }
}
